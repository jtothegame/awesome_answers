<%= @question.errors.full_messages.join(', ') %>
<%= form_for @question do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class = 'form-group'>
    <%= f.collection_select :tag_ids, Tag.order(:name), :id, :name, {},
        { multiple: true, class: 'chosen-select', style: 'width: 400px' } %>
  </div>
  <%= f.submit %>
<% end %>
